<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<factory>
		<partial-view-context-factory>de.beyondjava.angularFaces.core.puiEL.AngularViewContextWrapperFactory</partial-view-context-factory>
	</factory>
	<application>
	     <system-event-listener>
	         <system-event-listener-class>
	            de.beyondjava.angularFaces.core.puiEL.PuiELTransformer
	         </system-event-listener-class>
	         <system-event-class>
	            javax.faces.event.PostAddToViewEvent
	         </system-event-class>    					
	      </system-event-listener>
	     <system-event-listener>
	         <system-event-listener-class>
	            de.beyondjava.angularFaces.core.puiEL.PuiLabelDecorator
	         </system-event-listener-class>
	         <system-event-class>
	            javax.faces.event.PreRenderViewEvent
	         </system-event-class>    					
      </system-event-listener>
	</application>
</faces-config>